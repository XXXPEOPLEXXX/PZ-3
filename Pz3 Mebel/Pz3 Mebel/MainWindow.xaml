<Window x:Class="Pz3_Mebel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pz3_Mebel"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="171*" />
            <ColumnDefinition Width="629*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="38*" />
            <RowDefinition Height="179*" />
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Меню" FontSize="20" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button x:Name="BtnAuth" Content="Авторизация" Click="BtnAuth_Click" />
            <Button x:Name="BtnMebel" Content="Мебель" Click="BtnMebel_Click" />
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Column="1" Grid.Row="1" />
    </Grid>
</Window>
